# ZOREL LEATHER Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:spade@postgres:5432/zorel_leather
DATABASE_NAME=zorel_leather
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=spade

# Redis Configuration
REDIS_URL=redis://:redis_password@redis:6379

# JWT Configuration
SECRET_KEY=your-super-secret-jwt-key-change-in-production-must-be-32-chars-min
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=support@zorelleather.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=support@zorelleather.com
FROM_EMAIL=noreply@zorelleather.com

# WhatsApp Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# WhatsApp Business API (Alternative)
WHATSAPP_BUSINESS_API_TOKEN=your-whatsapp-business-api-token
WHATSAPP_BUSINESS_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_BUSINESS_VERIFY_TOKEN=your-verify-token
WHATSAPP_BUSINESS_API_URL=https://graph.facebook.com/v18.0

# Payment Configuration (Stripe)
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Security
CORS_ORIGINS=["http://localhost:3000", "http://frontend:3000"]
RATE_LIMIT_PER_MINUTE=60

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Admin Configuration
ADMIN_EMAIL=admin@zorelleather.com
ADMIN_PASSWORD=Admin123!
SUPER_ADMIN_EMAIL=superadmin@zorelleather.com
SUPER_ADMIN_PASSWORD=SuperAdmin123!

# Environment
ENVIRONMENT=production
FRONTEND_URL=http://localhost:3000

# Additional API Keys
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
SENDGRID_API_KEY=your-sendgrid-api-key

# Social Media Integration
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token

# Analytics
GOOGLE_ANALYTICS_ID=your-google-analytics-id
FACEBOOK_PIXEL_ID=your-facebook-pixel-id

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=INFO

# Frontend Environment Variables
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_BACKEND_URL=http://backend:8000
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
